from telegram.ext import Updater, MessageHandler, Filters

BOT_TOKEN = "ISI_DENGAN_TOKEN_BOT_KAMU"

def show_chat_id(update, context):
    chat_id = update.message.chat_id
    print(f"[DEBUG] Chat ID: {chat_id}")
    update.message.reply_text(f"Chat ID kamu adalah: {chat_id}")

updater = Updater(BOT_TOKEN, use_context=True)
dp = updater.dispatcher
dp.add_handler(MessageHandler(Filters.text & ~Filters.command, show_chat_id))

print("[INFO] Bot berjalan...")
updater.start_polling()
updater.idle()
